{
  "name": "@ianwalter/renovate-config",
  "version": "1.3.0",
  "description": "Ian's Renovate config preset",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/renovate-config.git"
  },
  "keywords": [
    "renovate",
    "config",
    "preset"
  ],
  "author": "Ian Walter <public@iankwalter.com> (https://iankwalter.com)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/ianwalter/renovate-config/issues"
  },
  "homepage": "https://github.com/ianwalter/renovate-config#readme",
  "devDependencies": {
    "@ianwalter/release": "^5.0.0",
    "@ianwalter/renovate-config": "^1.2.0"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prImmediately",
        ":renovatePrefix",
        ":updateNotScheduled",
        ":ignoreModulesAndTests",
        ":rebaseStalePrs"
      ],
      "rangeStrategy": "bump",
      "suppressNotifications": [
        "prIgnoreNotification",
        "prEditNotification"
      ],
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true
        },
        {
          "packagePatterns": [
            "^@ianwalter/bff"
          ],
          "groupName": "bff packages"
        },
        {
          "packagePatterns": [
            "^vue$",
            "^vue-template-compiler$"
          ],
          "groupName": "Vue"
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  }
}
